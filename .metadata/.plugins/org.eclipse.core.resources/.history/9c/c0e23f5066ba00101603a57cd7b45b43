package GarciaManuel1;


import java.util.Scanner;
public class ClaseMath 

{
	
	public static void main(String[] args) 
	
	{
		// VAMOS A HACER CALCULOS CON LA CLASE MATH //
		
		Scanner calculos = new Scanner (System.in);
		
		double num1, num2;
		
		System.out.println ( "CALCULOS CON LA CLASE MATH");
		System.out.println ( "--------------------------");
		
		System.out.print ( "Dime un numero aleatorio: ");
		num1 = calculos.nextDouble();
		
		System.out.print ( "Dime otro numero aleatorio: ");
		num2 = calculos.nextDouble();
		
		// REDONDEO Y VALOR ABSOLUTO //
		
		double round1 = Math.round(num1); // Round: Redondea al entero mas cercano
		double round2 = Math.round(num2);
		System.out.println ( "\nEl valor de Math.round del primer numero es: " + round1);
		System.out.println ( "El valor de Math.round del segundo numero es: " + round2);
		
		double ceil1 = Math.ceil(num1); // ceil: Redondea siempre hacia arriba 
		double ceil2 = Math.ceil(num2);
		System.out.println ( "\nEl valor de Math.ceil del primer numero es: " + ceil1);
		System.out.println ( "El valor de Math.ceil del segundo numero es: " + ceil2);
		
		double floor1 = Math.floor(num1); // floor: Redonde siempre hacia abajo
		double floor2 = Math.floor(num2);
		System.out.println ( "\nEl valor de Math.floor del primer numero es: " + floor1);
		System.out.println ( "El valor de Math.floor del segundo numero es: " + floor2);
		
		double abs1 = Math.abs(num1); // abs: Devuelve el valor absoluto del numero
		double abs2 = Math.abs(num2);
		System.out.println ( "\nEl valor de Math.abs del primer numero es: " + abs1);
		System.out.println ( "El valor de Math.abs del segundo numero es: " + abs2);
		
		// MAXIMO Y MINIMO //
		
		double max = Math.max (num1, num2); // Indica que numero es mayor entre dos valores
		System.out.println ( "\nEl numero mayor es: " + max);
		
		double min = Math.min (num1, num2); // Indica que numero es menor entre dos valores
		System.out.println ( "\nEl numero menor es: " + min);
		
		// TRIGONOMÃ‰TRICAS Y LOGARITMICAS //
		
		double seno = Math.sin (num1); // CALCULA EL SENO
		double seno1 = Math.sin (num2);
		System.out.println ( "\nEl seno del num 1 es: " + seno);
		System.out.println ( "El seno del num2 es: " + seno1);
		
		double coseno = Math.cos (num1); // CALCULA EL COSENO
		double coseno1 = Math.cos (num2);
		System.out.println ( "\nEl coseno del num1 es: " + coseno);
		System.out.println ( "El coseno del num2 es: " + coseno1);
		
		double tangente = Math.tan (num1); // CALCULA LA TANGENTE
		double tangente1 = Math.tan (num2);
		System.out.println ( "\nLa tangente del num1 es: " + tangente);
		System.out.println ( "La tangente del num2 es: " + tangente1);
		
		double lognat = Math.log (num1); // DEVUELVE EL LOGARITMO NATURAL EN BASE E
		double lognat1 = Math.log (num2);
		System.out.println ( "\nEl logaritmo natural del num1 es: " + lognat);
		System.out.println ( "El logaritmo natural del num2 es: " + lognat1);
		
		double log10 = Math.log10 (num1); // DEVUELVE EL LOGARITMO EN BASE 10
		double loog10 = Math.log10 (num2);
		System.out.println ( "\nEl logaritmo base 10 del num1 es: " + log10);
		System.out.println ( "El logaritmo base 10 del num2 es: " + loog10);
		
		final double PI = Math.PI; // REPRESENTA EL VALOR DE PI
		System.out.println ( "\nEl valor de pi es: " + PI);
		
		final double EULER = Math.E; // REPRESENTA EL VALOR DEL NUMERO EULER
		System.out.println ( "\nEl valor del numero EULER es: " + EULER);
		
		
		
		
		
		
		
		
	
		
		
		
		
		
		
		calculos.close();

	}

}

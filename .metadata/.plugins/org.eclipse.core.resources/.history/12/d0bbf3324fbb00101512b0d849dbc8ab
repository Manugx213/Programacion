package Metodos;


import java.util.Scanner;
public class metodo1

{

	public static void main(String[] args) 

	{
		double num1;
		double num2;
		String operando;
		
		Scanner programa = new Scanner (System.in);
		
		System.out.print ("Introduce un numero aleatorio: ");
		num1 = programa.nextDouble();
		
		System.out.print ("Introduce un operando: ");
		operando = programa.nextLine();
		programa.nextLine();
	
		System.out.print ("Introduce otro numero aleatorio: ");
		num2 = programa.nextDouble();
		
		//--------------------------------------------------------//
		System.out.println (operando);
		System.out.println (operacion (num1, operando, num2 ));
		
		

	}
	
	public static double operacion (double A, String C, double B) 
	{
		
		double resultado = 0;
		
		switch (C){
		
		case "+" : resultado = A + B;
		break;
		
		case "-" : resultado = A - B;
		break;
		
		case "*" : resultado = A * B;
		break;
		
		case "/" : resultado = A / B;
		break;
		
		case "%" : resultado = A % B;
		break;
		
		}
		
		return resultado;
		
		
	}
	
}

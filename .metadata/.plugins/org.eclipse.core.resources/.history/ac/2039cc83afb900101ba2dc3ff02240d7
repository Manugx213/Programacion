package GarciaManuel1;

public class prueba
{

	public static void main(String[] args)
	
	{
		
		String nombre = "Manu";
		String nombre1 = "Manu";
		
		int longitud = nombre.length(); // Pedimos la cantidad de huecos ocupados en mi variable
										// length no es estatico
										// estamos guardandolo en una variable
	
		char letra = nombre.charAt(0); // Pedimos una posicion en la variable que hemos guardado
		
		String frase = "Hoy es un dia perfecto para aprender a programa";
		
		String subcadena = frase.substring (4, 23); // Pedimos una candidad de posiciones dentro de una variable
		String subcadena1 = frase.substring (4);	// pedimos desde la la posicion seleccionada
		
		boolean compara = nombre.equals(nombre1); // Pedimos si dos variables son iguales
		boolean compara1 = nombre.equalsIgnoreCase(nombre1);// igual que equals, pero ignorando mayusculas
		
		String concat = nombre.concat(nombre1);
		
		
		System.out.println (longitud);
		System.out.println (letra);
		System.out.println (subcadena);
		System.out.println (subcadena1);
		System.out.println (compara);
		System.out.println (compara1);
		System.out.println (concat);
	
	}

}
